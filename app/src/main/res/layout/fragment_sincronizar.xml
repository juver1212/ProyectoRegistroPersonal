<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".sincronizarFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ultima fecha de sincronización"
                android:paddingTop="12dp"
                android:gravity="center"
                android:textSize="30dp"
                android:textColor="#000000" />

            <TextView android:id="@+id/txtfechasincronizacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sin registro"
                android:paddingTop="12dp"
                android:gravity="center"
                android:textSize="22dp"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnsincronizar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SINCRONIZAR"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/fontredonde"
                android:background="@drawable/borde_redondo_color"
                android:theme="@style/RaisedButtonDark" />


            <Button
                android:id="@+id/btnLista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Ir a registro de marcación"
                android:fontFamily="@font/fontredonde"
                android:background="@drawable/border_redondo_color_inactivo"
                android:theme="@style/RaisedButtonDark" />

    </LinearLayout>

</FrameLayout>